<header class="content__title">
  <h1>
    <%= t('helpers.submit.general.show', model: t('activerecord.models.sale_item.one')) %>
  </h1>

  <div class="actions">
    <%= link_to '', (controller_name == "versions" ? index_versions_path(model_name: "sale_items") : sale_items_path), title: t('activerecord.link.back_to_list'), class: 'actions__item zmdi zmdi-arrow-left' %>
    <%= link_to '', '', title: t('activerecord.link.refresh'), class: 'actions__item zmdi zmdi-refresh-alt' %>
    <%= link_to '', edit_sale_item_path(@sale_item), title: t('activerecord.link.edit'), class: 'actions__item zmdi zmdi-edit' if can?(:edit, @sale_item) && controller_name != 'versions' %>
  </div>
</header>
<div class="card">
  <div class="card-body card-padding record-show">
    <div class="row">
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.sale_item.sale') %></label><br/>&nbsp;
          <%= @sale_item.sale.id %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.sale_item.product') %></label><br/>&nbsp;
          <%= @sale_item.product.name %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.sale_item.quantity') %></label><br/>&nbsp;
          <%= @sale_item.quantity %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.sale_item.unit_price') %></label><br/>&nbsp;
          <%= @sale_item.unit_price %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.sale_item.total') %></label><br/>&nbsp;
          <%= @sale_item.total %>
        </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <label class="fg-label"><%= t('activerecord.attributes.sale_item.created_at') %></label><br/>&nbsp;
        <%= @sale_item.created_at %>
      </div>
      <div class="col-sm-6">
        <label class="fg-label"><%= t('activerecord.attributes.sale_item.updated_at') %></label><br/>&nbsp;
        <%= @sale_item.updated_at %>
      </div>
    </div>
  </div>
</div>
<%= render partial: "layouts/record_changes", locals: { :@object => @sale_item } %>