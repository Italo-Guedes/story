<header class="content__title">
  <h1>
    <%= t('helpers.submit.general.show', model: t('activerecord.models.supplier.one')) %>
  </h1>

  <div class="actions">
    <%= link_to '', (controller_name == "versions" ? index_versions_path(model_name: "suppliers") : suppliers_path), title: t('activerecord.link.back_to_list'), class: 'actions__item zmdi zmdi-arrow-left' %>
    <%= link_to '', '', title: t('activerecord.link.refresh'), class: 'actions__item zmdi zmdi-refresh-alt' %>
    <%= link_to '', edit_supplier_path(@supplier), title: t('activerecord.link.edit'), class: 'actions__item zmdi zmdi-edit' if can?(:edit, @supplier) && controller_name != 'versions' %>
  </div>
</header>
<div class="card">
  <div class="card-body card-padding record-show">
    <div class="row">
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.supplier.name') %></label><br/>&nbsp;
          <%= @supplier.name %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.supplier.address') %></label><br/>&nbsp;
          <%= @supplier.address %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.supplier.phone') %></label><br/>&nbsp;
          <%= @supplier.phone %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.supplier.email') %></label><br/>&nbsp;
          <%= @supplier.email %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.supplier.cpf_cnpj') %></label><br/>&nbsp;
          <%= @supplier.cpf_cnpj %>
        </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <label class="fg-label"><%= t('activerecord.attributes.supplier.created_at') %></label><br/>&nbsp;
        <%= @supplier.created_at %>
      </div>
      <div class="col-sm-6">
        <label class="fg-label"><%= t('activerecord.attributes.supplier.updated_at') %></label><br/>&nbsp;
        <%= @supplier.updated_at %>
      </div>
    </div>
  </div>
</div>
<%= render partial: "layouts/record_changes", locals: { :@object => @supplier } %>